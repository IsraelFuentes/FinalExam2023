@model Account
<h1>@TempData["failed"]</h1>
<form method="post" asp-action="LoginPOST">
    @*<input asp-for="Id"  />*@
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Login to Account</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span> @*Server_side Validation*@
        </div>
        <div class="mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span> @*Server_side Validation*@
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
        @*<a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Exit</a>*@
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
